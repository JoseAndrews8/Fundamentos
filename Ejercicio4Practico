#include <iostream>

using namespace std;

int main()
{
    int N, i = 1, signo = 1, acum = 0; 
    
    do {
        cout << "Ingrese el numero de elementos: ";
        cin >> N;
    } while (N < 0); 
    
    for (i = 1; i <= N; i++)
    {
        acum = acum + (signo * i);
        signo = -signo;
    }
    
    cout << "La sumatoria es: " << acum - 1;

    return 0;
}
