#include <iostream>

using namespace std;

int main()
{
    float Digito1, Digito2, suma;
    cout<<"============================="<<endl;
    cout<<"Adicion"<<endl;
    cout<<"============================="<<endl;
    cout<<"Insertar Primer Digito:  ";
    cin>>Digito1;
    cout<<"Insertar Segundo Digito:  ";
    cin>>Digito2;
    suma = Digito1 + Digito2;
    cout<<"-----------------------------"<<endl;
    cout<<"El resultado es: "<<suma<<endl;
    cout<<"-----------------------------"<<endl;

    return 0;
}
